<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal" android:layout_width="wrap_content"
	android:layout_height="wrap_content">
	<ImageView android:id="@+id/img" android:layout_width="100px"
		android:layout_height="100px" />
	<LinearLayout android:orientation="vertical"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:layout_margin="20px">
		<TextView android:id="@+id/filename" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
			android:textSize="22px"></TextView>
		<TextView android:id="@+id/createtime" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:textColor="#FFFFFFFF"
			android:textSize="15px"></TextView>
	</LinearLayout>
</LinearLayout>